<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray"
    tools:context=".VentureMapActivity">

    <TextView
        android:id="@+id/ventureNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VENTURE 1"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/primary_blue"
        android:padding="16dp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="As soon as clicks on venture location, he gets into a Map which shows the availability and infrastructure of the venture."
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:padding="12dp"
        android:background="@color/white"
        android:layout_margin="8dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginHorizontal="8dp"
        android:background="@color/white">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="● Green: Available"
            android:textSize="12sp"
            android:textColor="@color/green_plot"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="● Orange: Under Process"
            android:textSize="12sp"
            android:textColor="@color/orange_plot"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="● Red: Sold"
            android:textSize="12sp"
            android:textColor="@color/red_plot"
            android:padding="4dp" />

    </LinearLayout>

    <GridView
        android:id="@+id/plotGridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numColumns="5"
        android:layout_margin="8dp"
        android:horizontalSpacing="4dp"
        android:verticalSpacing="4dp"
        android:stretchMode="columnWidth" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:background="@color/primary_blue"
        android:textColor="@color/white"
        android:layout_margin="8dp"
        android:padding="12dp" />

</LinearLayout>
